<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logobehind"
    android:orientation="vertical"
    tools:context=".newClubprofile"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
   >
    <TextView
        android:id="@+id/im1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="50dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/home"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/homelogo"
        android:layout_marginLeft="-80dp"
        android:layout_marginTop="15dp"
        />

</LinearLayout>
    <Button
        android:textStyle="bold"
        android:text="Add member"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:background="#D6D6C4"
        style="@style/CardView.Light"
        android:drawableLeft="@drawable/ic_addperson"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        style="@style/CardView.Light"
        android:textStyle="bold"
        android:background="#D6D6C4"
        android:textSize="40sp"
        android:text="Remove member"
        android:drawableLeft="@drawable/ic_remp"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:background="#D6D6C4"
        style="@style/CardView.Light"
        android:drawableLeft="@drawable/ic_delete"
        android:text="Delete the group"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="right"
        android:layout_marginTop="200dp"
        android:src="@drawable/ic_message"/>

</LinearLayout>